{
  "name": "web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write . --cache --cache-location ../../.cache/prettier",
    "lint": "prettier --check . --cache --cache-location ../../.cache/prettier && eslint . --cache --cache-location ../../.cache/eslint",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e:generate": "bddgen",
    "test:e2e": "pnpm spec:extract && bddgen && playwright test",
    "spec:extract": "node src/lib/specdsl/extract.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/typography": "0.5.19",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/svelte": "5.2.8",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^22.18.6",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/browser": "^3.2.3",
    "autoprefixer": "10.4.21",
    "daisyui": "4.12.24",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.0.0",
    "jsdom": "27.0.0",
    "mdsvex": "^0.12.3",
    "playwright": "^1.53.0",
    "playwright-bdd": "8.4.1",
    "postcss": "8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "1.3.3",
    "tailwindcss": "3.4.14",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.0.4",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^0.1.0"
  }
}
