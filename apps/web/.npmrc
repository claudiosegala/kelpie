# Enforce Node engine compatibility
engine-strict=true

# Always save exact versions (no ^ or ~)
save-exact=true

# Keep one lockfile for all workspaces
shared-workspace-lockfile=true

# Prefer reproducible installs
prefer-frozen-lockfile=true

# Auto-install peer deps to reduce warnings
auto-install-peers=true

# Be strict about peer dep mismatches
strict-peer-dependencies=true

# Default workspace behavior
recursive-install=true

# Keep Tailwind local to this package (do not hoist to root)
public-hoist-pattern[]=!tailwindcss
