{
  "name": "kelpie",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "preview": "pnpm -C apps/web preview",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "pnpm -C apps/web check",
    "test:unit": "pnpm -C apps/web test:unit",
    "test:unit:watch": "pnpm -C apps/web test:unit:watch",
    "test:e2e": "pnpm -C apps/web test:e2e",
    "spec:extract": "node apps/web/src/lib/specdsl/extract.js",
    "ai:refactor": "node scripts/ai-refactor.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,svelte}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cucumber/cucumber": "^12.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^3.12.4",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.0",
    "playwright-bdd": "^8.4.1",
    "prettier": "^3.3.0",
    "svelte-eslint-parser": "^1.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
