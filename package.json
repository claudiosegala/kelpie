{
  "name": "kelpie",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "preview": "pnpm --filter web preview",
    "lint": "pnpm --filter web lint",
    "format": "node scripts/run-prettier.js --write . --cache --cache-location ./.cache/prettier --config prettier.config.cjs",
    "typecheck": "pnpm --filter web check",
    "test:unit": "pnpm --filter web test:unit",
    "test:unit:watch": "pnpm --filter web test:unit:watch",
    "test:e2e": "node scripts/run-e2e.js",
    "spec:extract": "pnpm --filter web spec:extract",
    "ai:refactor": "node scripts/ai-refactor.js",
    "test:e2e:all": "node scripts/run-e2e.js --browsers=chromium,webkit",
    "spec:extract:watch": "node scripts/spec-watch.js",
    "prepare": "node scripts/setup-hooks.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,svelte}": [
      "pnpm exec eslint --config apps/web/eslint.config.js --fix --cache --cache-location ./.cache/eslint",
      "node scripts/run-prettier.js --write --cache --cache-location ./.cache/prettier --config prettier.config.cjs"
    ],
    "*.{md,json,yml,yaml}": [
      "node scripts/run-prettier.js --write --cache --cache-location ./.cache/prettier --config prettier.config.cjs"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cucumber/cucumber": "^12.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^3.12.4",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.0",
    "playwright-bdd": "^8.4.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte-eslint-parser": "^1.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
